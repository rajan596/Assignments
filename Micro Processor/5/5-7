; Ass 5-7
; find squares

LXI B,6100H	; N
LXI D,7000H	; N*N stored here

UP1: nop
LXI H,0000H     ; hl=0
LDAX B		; acc = N
ADI 00H		; 
JZ EXIT		; LOCATION IS NOT ZERO
MOV E,A
MOV L,A

; N*N
UP: nop
DCR L		; DO SQUARE OF GIVEN NUM
JZ DOWN 	; BY ADDITON
ADC E
JNC NEXT
INR H
NEXT: JMP UP

DOWN: MOV E,C	; STORE RESULT 

STAX D
INX B
JMP UP1;
EXIT: nop

hlt