
; assignment : 5-3
; sum of sequence
; sum stored at : 2000h(LSB) and 2001H(MSB)

jmp start

;data


;code
start: nop

lda 2102h     ; block size is stored here
mov c,a       ; counter

lxi d,2103h   ; memory pointer
mvi h,00h     ; store sum in h
mvi l,00h

loop: nop
dad d        ; hl =hl + de
inx d
dcr c
jnz loop

MOV A,H
STA 2100H

MOV A,L
STA 2101H

hlt